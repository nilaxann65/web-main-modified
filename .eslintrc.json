{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    },
    "overrides": [
        // Only uses Testing Library lint rules in test files
        {
            "files": [
                "**/__tests__/**/*.[jt]s?(x)",
                "**/?(*.)+(spec|test).[jt]s?(x)","*.ts", "*.mts", "*.cts", "*.tsx"
            ],
            "extends": [
                "plugin:testing-library/react"
            ]
        }
    ]
}
